{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./Client/App/",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "typings/**",
    "typings/*.d.ts"
  ],
  "types": [
    "core-js",
    "node"
  ],
  "typeRoots": [
    "./node_modules/@types"
  ]
}