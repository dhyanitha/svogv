{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom", "es2015"
    ],
    "module": "es2015",
    "outDir": "../../dist/compiled",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "files": [
    "./app/app.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node"
  ]
}